/** 

* crear un horario del curso con colores distintos.

*/





public class ejercicio05 {
 public static void main (String[] args) {


  String rojo = "\033[31m";
  String verde = "\033[32m";
  String naranja = "\033[33m";
  String azul = "\033[34m";
  String morado = "\033[35m";
  String blanco = "\033[37m";
  
	System.out.println(verde + "horario         " + verde + "lunes "  +  verde + "martes " + verde + "miercoles " + verde	+ "jueves " + verde + "viernes ");
	 
		System.out.println(rojo + "8:15-9:15\t" + azul + "FOL\t" +  morado  + "PROG\t" + blanco + "SIN\t" + rojo 		+ "PROG\t" + naranja + "BBDD\t");

	System.out.println(rojo + "9:15-10:15\t" + azul + "FOL\t" +  morado  + "PROG\t" + blanco + "SIN\t" + naranja + "PROG\t" + rojo + "BBDD\t");

		System.out.println(rojo + "10:15-11:15\t" + morado + "FOL\t" +  naranja  + "prog\t" + verde + "SIN\t" + blanco + "prog\t" + azul + "BBDD\t");

	System.out.println(rojo + "11:15-11:45\t" + rojo + "R\t"   +  rojo  + "E\t" + rojo + "CR\t" + rojo 	+ "E\t" + rojo + "O\t");

	
	System.out.println(rojo + "11:45-12:40\t" + verde + "prog\t"   +  azul  + "BBDD\t" + naranja + "SIN\t" + blanco 	+ "ED\t" + azul + "PROG\t");

	System.out.println(rojo + "12:40-13:35\t" + rojo + "ED\t"   +  verde  + "BBDD\t" + morado + "LM\t" + azul 	+ "LM\t" + blanco + "SIN\t");

	System.out.println(rojo + "12:40-13:35\t" + azul + "ED\t"   +  blanco  + "BBDD\t" + morado + "LM\t" + verde 	+ "LM\t" + naranja + "SIN\t");


 }
 
}
